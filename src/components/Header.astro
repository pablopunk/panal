---
import { Icon } from 'astro-icon/components';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="h-16 border-b border-gray-200 dark:border-gray-800 flex items-center justify-between px-6">
  <div class="md:hidden flex items-center">
    <button id="sidebar-toggle" aria-label="Toggle Sidebar" class="p-2 rounded-md hover:bg-gray-200 dark:hover:bg-gray-800">
      <Icon name="lucide:menu" class="h-5 w-5" />
    </button>
    <a href="/" class="flex items-center gap-2 font-semibold text-xl ml-2">
      <Icon name="lucide:box" class="h-6 w-6 text-emerald-600" />
      <span>Panal</span>
    </a>
  </div>
  <div class="flex items-center gap-4">
    <ThemeToggle />
    <div class="relative">
      <button id="user-menu-button" aria-label="User Menu" class="flex items-center gap-2 hover:bg-gray-200 dark:hover:bg-gray-800 p-2 rounded-md">
        <span class="hidden sm:inline-block">Admin</span>
        <Icon name="lucide:user" class="h-5 w-5" />
      </button>
    </div>
  </div>
</header>

<script>
  // Mobile sidebar toggle
  const sidebarToggle = document.getElementById('sidebar-toggle');
  sidebarToggle?.addEventListener('click', () => {
    const sidebar = document.querySelector('aside');
    sidebar?.classList.toggle('hidden');
  });
</script>
