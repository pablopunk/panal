---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Not Found">
  <div class="flex flex-col items-center justify-center min-h-[calc(100vh-4rem)] text-center p-6">
    <Icon name="lucide:alert-circle" class="w-16 h-16 text-gray-400 mb-4" />
    <h1 class="text-3xl font-bold mb-2">Page Not Found</h1>
    <p class="text-gray-500 dark:text-gray-400 mb-6">The page you are looking for doesn't exist or has been moved.</p>
    <Button>
      <a href="/" class="flex items-center">
        <Icon name="lucide:arrow-left" class="w-4 h-4 mr-2" />
        Back to Home
      </a>
    </Button>
  </div>
</Layout>
