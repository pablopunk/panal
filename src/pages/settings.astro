---
import Layout from "../layouts/Layout.astro";
import { DB_LOCATION, STACKS_DIR } from "../lib/config";
import AppSettingsForm from "../react/AppSettingsForm";
import Button from "../react/Button";
import Card from "../react/Card";
import Input from "../react/Input";
import UserSettingsForm from "../react/UserSettingsForm";
---

<Layout title="Settings">
  <div class="mb-6">
    <h1 class="text-2xl font-bold">Settings</h1>
    <p class="text-gray-500 dark:text-gray-400">Configure Panal</p>
  </div>

  <div class="grid gap-6 max-w-2xl">
    <Card client:only="react" title="User Settings">
      <UserSettingsForm client:only="react" initialUsername="admin" />
    </Card>

    <Card client:only="react" title="App Settings">
      <AppSettingsForm client:only="react" />
    </Card>

    <Card client:only="react" title="Environment Variables">
      <div class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <div class="font-medium mb-2 text-sm pt-2">DB_LOCATION</div>
            <div class="text-sm text-gray-500 dark:text-gray-400">
              {DB_LOCATION}
            </div>
          </div>

          <div>
            <div class="font-medium mb-2 text-sm pt-2">STACKS_DIR</div>
            <div class="text-sm text-gray-500 dark:text-gray-400">
              {STACKS_DIR}
            </div>
          </div>
        </div>

        <div class="text-sm text-gray-500 dark:text-gray-400">
          Environment variables are set at container startup and cannot be
          changed here. Update your docker-compose.yml or docker run command to
          modify these values.
        </div>
      </div>
    </Card>
  </div>
</Layout>
