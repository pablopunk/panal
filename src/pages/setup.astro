---
import { Icon } from "astro-icon/components";
import EmptyLayout from "../layouts/EmptyLayout.astro";
import Card from "../react/Card";
import SetupForm from "../react/SetupForm";
---

<EmptyLayout title="Setup">
  <div class="flex w-full justify-center">
    <Card client:only="react" className="w-full md:w-2/3 max-w-xl">
      <div class="text-center mb-6">
        <div class="flex justify-center mb-2">
          <Icon name="lucide:box" class="h-12 w-12 text-emerald-600" />
        </div>
        <h1 class="text-2xl font-bold">Welcome to Panal</h1>
        <p class="text-gray-500 dark:text-gray-400">
          Docker Swarm Management UI
        </p>
      </div>
      <SetupForm client:only="react" />
    </Card>
  </div>
</EmptyLayout>
