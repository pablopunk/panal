---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
import Button from "../react/Button";
import Card from "../react/Card";
import Input from "../react/Input";
---

<Layout title="Login">
  <div class="flex items-center justify-center min-h-screen p-6">
    <Card client:only="react" className="w-full max-w-md">
      <div class="text-center mb-6">
        <div class="flex justify-center mb-2">
          <Icon name="lucide:box" class="h-12 w-12 text-emerald-600" />
        </div>
        <h1 class="text-2xl font-bold">Login to Panal</h1>
        <p class="text-gray-500 dark:text-gray-400">
          Docker Swarm Management UI
        </p>
      </div>

      <form class="space-y-4">
        <Input client:only="react" label="Username" name="username" required />

        <Input
          client:only="react"
          type="password"
          label="Password"
          name="password"
          required
        />

        <div class="pt-4">
          <Button client:only="react" type="submit" className="w-full">
            Login
          </Button>
        </div>
      </form>
    </Card>
  </div>
</Layout>
