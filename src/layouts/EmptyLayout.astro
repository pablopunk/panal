---
import ThemeToggle from "../react/ThemeToggle";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Panal - Docker Swarm Management UI" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Panal</title>
  </head>
  <body
    class="min-h-screen dark:bg-gray-950 text-gray-900 dark:text-gray-50 flex flex-col items-center justify-center"
  >
    <div class="fixed top-4 right-4 z-50">
      <ThemeToggle client:only="react" />
    </div>
    <main class="w-full flex items-center justify-center p-6 min-h-screen">
      <slot />
    </main>
  </body>
</html>
